<Window x:Class="NotePad2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotePad2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FF98B87E">
        <Button x:Name="btnOpen" Content="開啟檔案" HorizontalAlignment="Left" Height="49" Margin="24,10,0,0" VerticalAlignment="Top" Width="98" Click="btnOpen_Click"/>
        <Button x:Name="btnSave" Content="存檔" HorizontalAlignment="Left" Height="49" Margin="148,10,0,0" VerticalAlignment="Top" Width="98" Click="btnSave_Click"/>
        <RichTextBox x:Name="rtbText" Margin="24,78,69,28" Height="NaN" Width="NaN">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>
